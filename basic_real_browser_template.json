{
  "name": "NAME_OF_CHECK",
  "tags": [
    ""
  ],
  "frequency": 5,
  "round_robin": true,
  "auto_retry": false,
  "enabled": true,
  "locations": [
    5
  ],
  "response_time_monitor_milliseconds": "4000",
  "http_request_headers": {
    "Content-Type": "text/html"
  },
  "notifications": {
    "sms": false,
    "email": false,
    "call": false,

    "notify_after_failure_count": 1,
    "notify_on_location_failure": false,

    "user_agent": "Mozilla/5.0 (X11; Linux x86_64; Rigor) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/86.0.4240.75 Safari/537.36",
    "auto_update_user_agent": false,
    "viewport": {
      "height": 768,
      "width": 1366
    },
    "muted": true
  },

  "browser": {
    "type": "chrome"
  },
  "enforce_ssl_validation": true,
  "url": "SITE_URL",

  "excluded_files": [
    {
      "exclusion_type": "preset",
      "preset_name": "chartbeat",
      "pattern": "static\\.chartbeat\\.com"
    }
  ],
  "threshold_monitors": [
    {
      "matcher": "rigor.com/example",
      "metric_name": "dom_load_time",
      "comparison_type": "less_than",
      "value": 3000
    }
  ],
  "connection": {
    "upload_bandwidth": 5000,
    "download_bandwidth": 20000,
    "latency": 28,
    "packet_loss": 0
  },
  "wait_for_full_metrics": true
}
